{
  "include": ["src/**/*"],

  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",

    "declaration": true,
    "declarationMap": true,

    "resolveJsonModule": true,

    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true
  }
}
